<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="registerRoot" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.shopjoy.controller.RegisterController"
            stylesheets="@../css/styles.css,@../css/register.css"
            styleClass="register-root">

    <!-- Top Section: Page Title -->
    <top>
        <VBox alignment="CENTER" spacing="8" styleClass="register-header">
            <Label text="Create New Account" styleClass="register-title"/>
            <Label text="Join ShopJoy today and start shopping!" styleClass="register-subtitle"/>
        </VBox>
    </top>

    <!-- Center Section: Registration Form -->
    <center>
        <VBox alignment="CENTER" spacing="0" maxWidth="550">
            <padding>
                <Insets top="30" right="0" bottom="30" left="0"/>
            </padding>
            
            <VBox styleClass="register-form" maxWidth="550">

                <!-- Username Field -->
                <HBox spacing="12" alignment="CENTER_LEFT">
                    <Label text="Username:" styleClass="register-label"/>
                    <TextField fx:id="regUsernameField" promptText="Choose a username" HBox.hgrow="ALWAYS"
                              styleClass="register-field"/>
                </HBox>

                <!-- Email Field -->
                <HBox spacing="12" alignment="CENTER_LEFT">
                    <Label text="Email:" styleClass="register-label"/>
                    <TextField fx:id="regEmailField" promptText="Enter email address" HBox.hgrow="ALWAYS"
                              styleClass="register-field"/>
                </HBox>

                <!-- Password Field -->
                <HBox spacing="12" alignment="CENTER_LEFT">
                    <Label text="Password:" styleClass="register-label"/>
                    <PasswordField fx:id="regPasswordField" promptText="Choose a password" HBox.hgrow="ALWAYS"
                                  styleClass="register-field"/>
                </HBox>

                <!-- Confirm Password Field -->
                <HBox spacing="12" alignment="CENTER_LEFT">
                    <Label text="Confirm Password:" styleClass="register-label"/>
                    <PasswordField fx:id="regConfirmPasswordField" promptText="Re-enter password" HBox.hgrow="ALWAYS"
                                  styleClass="register-field"/>
                </HBox>

                <!-- First Name Field -->
                <HBox spacing="12" alignment="CENTER_LEFT">
                    <Label text="First Name:" styleClass="register-label"/>
                    <TextField fx:id="regFirstNameField" promptText="Enter first name" HBox.hgrow="ALWAYS"
                              styleClass="register-field"/>
                </HBox>

                <!-- Last Name Field -->
                <HBox spacing="12" alignment="CENTER_LEFT">
                    <Label text="Last Name:" styleClass="register-label"/>
                    <TextField fx:id="regLastNameField" promptText="Enter last name" HBox.hgrow="ALWAYS"
                              styleClass="register-field"/>
                </HBox>

                <!-- Phone Field -->
                <HBox spacing="12" alignment="CENTER_LEFT">
                    <Label text="Phone:" styleClass="register-label"/>
                    <TextField fx:id="regPhoneField" promptText="Enter phone number" HBox.hgrow="ALWAYS"
                              styleClass="register-field"/>
                </HBox>

                <!-- Message Label -->
                <Label fx:id="registerMessageLabel" styleClass="register-message" wrapText="true" alignment="CENTER"/>

                <!-- Buttons -->
                <HBox spacing="15" alignment="CENTER" styleClass="register-actions">
                    <Button fx:id="createAccountButton" text="Create Account" onAction="#handleCreateAccount"
                            styleClass="register-create-button"/>
                    <Button fx:id="backToLoginButton" text="Back to Login" onAction="#handleBackToLogin"
                            styleClass="register-back-button"/>
                </HBox>

            </VBox>
        </VBox>
    </center>

    <!-- Bottom Section: Footer -->
    <bottom>
        <VBox alignment="CENTER" styleClass="register-footer">
            <Label text="Â© 2026 ShopJoy. All rights reserved." styleClass="register-footer-text"/>
        </VBox>
    </bottom>

</BorderPane>
