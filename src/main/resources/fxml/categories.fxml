<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.shopjoy.controller.CategoriesController"
            stylesheets="@../css/styles.css">

    <!-- Top Section: Header -->
    <top>
        <HBox spacing="15" alignment="CENTER_LEFT" style="-fx-padding: 15; -fx-background-color: white; -fx-border-color: #e0e0e0; -fx-border-width: 0 0 1 0;">
            <Label text="Category Management" styleClass="section-title"
                   style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #424242;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button fx:id="addCategoryButton" text="+ Add Category" onAction="#handleAddCategory"
                    styleClass="primary-button"
                    style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 8 20; -fx-cursor: hand;"/>
        </HBox>
    </top>

    <!-- Center Section: Categories Table -->
    <center>
        <TableView fx:id="categoriesTable" style="-fx-background-color: white;">
            <columns>
                <TableColumn fx:id="categoryIdColumn" text="ID" minWidth="60" prefWidth="60"
                             style="-fx-alignment: CENTER;"/>

                <TableColumn fx:id="categoryNameColumn" text="Category Name" minWidth="200" prefWidth="200"/>

                <TableColumn fx:id="categoryDescriptionColumn" text="Description" minWidth="300" prefWidth="300"/>

                <TableColumn fx:id="categoryProductCountColumn" text="Products" minWidth="100" prefWidth="100"
                             style="-fx-alignment: CENTER;"/>

                <TableColumn fx:id="categoryParentColumn" text="Parent Category" minWidth="150" prefWidth="150"/>

                <TableColumn fx:id="categoryActionsColumn" text="Actions" minWidth="150" prefWidth="150"
                             style="-fx-alignment: CENTER;"/>
            </columns>
            
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
    </center>

</BorderPane>
