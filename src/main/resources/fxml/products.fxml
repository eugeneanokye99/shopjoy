<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>

<BorderPane fx:id="productsRoot" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.shopjoy.controller.ProductsController"
            stylesheets="@../css/styles.css">

    <!-- Top Section: Header with Search and Add Button -->
    <top>
        <HBox spacing="15" alignment="CENTER_LEFT" style="-fx-padding: 15; -fx-background-color: white; -fx-border-color: #e0e0e0; -fx-border-width: 0 0 1 0;">
            
            <Label text="Product Management" styleClass="section-title"
                   style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #424242;"/>
            
            <!-- Spacer -->
            <Region HBox.hgrow="ALWAYS"/>
            
            <TextField fx:id="productSearchField" promptText="Search products..." prefWidth="250"
                      style="-fx-pref-height: 35px; -fx-font-size: 14px;"/>
            
            <Button fx:id="searchProductButton" text="Search" onAction="#handleSearch"
                    style="-fx-background-color: #757575; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 8 20; -fx-cursor: hand;"/>
            
            <Button fx:id="addProductButton" text="+ Add Product" onAction="#handleAddProduct"
                    styleClass="primary-button"
                    style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 8 20; -fx-cursor: hand;"/>
        </HBox>
    </top>

    <!-- Center Section: Products Table -->
    <center>
        <TableView fx:id="productsTable" style="-fx-background-color: white;">
            <columns>
                <TableColumn fx:id="productIdColumn" text="ID" minWidth="60" prefWidth="60"
                            style="-fx-alignment: CENTER;"/>
                
                <TableColumn fx:id="productNameColumn" text="Product Name" minWidth="200" prefWidth="200"/>
                
                <TableColumn fx:id="productCategoryColumn" text="Category" minWidth="150" prefWidth="150"/>
                
                <TableColumn fx:id="productPriceColumn" text="Price" minWidth="100" prefWidth="100"
                            style="-fx-alignment: CENTER_RIGHT;"/>
                
                <TableColumn fx:id="productStockColumn" text="Stock" minWidth="80" prefWidth="80"
                            style="-fx-alignment: CENTER;"/>
                
                <TableColumn fx:id="productSkuColumn" text="SKU" minWidth="120" prefWidth="120"/>
                
                <TableColumn fx:id="productActiveColumn" text="Active" minWidth="80" prefWidth="80"
                            style="-fx-alignment: CENTER;"/>
                
                <TableColumn fx:id="productActionsColumn" text="Actions" minWidth="150" prefWidth="150"
                            style="-fx-alignment: CENTER;"/>
            </columns>
            
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
    </center>

</BorderPane>
