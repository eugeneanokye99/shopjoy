<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/17" 
      xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.shopjoy.controller.CategoriesManagementController"
      spacing="20" 
      styleClass="content-view"
      stylesheets="@../../css/styles.css">
    
    <padding>
        <Insets top="30" right="30" bottom="30" left="30"/>
    </padding>

    <!-- Header Section -->
    <HBox alignment="CENTER_LEFT" spacing="15" style="-fx-padding: 10;">
        <Label text="Category Management" styleClass="page-title"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button fx:id="addCategoryButton" text="+ Add Category" onAction="#handleAddCategory" styleClass="primary-button"/>
        <Button fx:id="refreshCategoriesButton" text="ðŸ”„ Refresh" onAction="#handleRefresh" styleClass="secondary-button"/>
    </HBox>

    <!-- Info Section -->
    <HBox spacing="20" style="-fx-padding: 10;">
        <Label fx:id="totalCategoriesLabel" text="Total Categories: 0" styleClass="info-label"/>
        <Label fx:id="topLevelCategoriesLabel" text="Top Level: 0" styleClass="info-label"/>
    </HBox>

    <!-- Table Section -->
    <TableView fx:id="categoriesTable" prefHeight="550">
        <columns>
            <TableColumn fx:id="categoryIdColumn" text="ID" prefWidth="60"/>
            <TableColumn fx:id="categoryNameColumn" text="Category Name" prefWidth="250"/>
            <TableColumn fx:id="categoryDescriptionColumn" text="Description" prefWidth="350"/>
            <TableColumn fx:id="categoryParentColumn" text="Parent Category" prefWidth="200"/>
            <TableColumn fx:id="categoryProductCountColumn" text="Products" prefWidth="100"/>
            <TableColumn fx:id="categoryActionsColumn" text="Actions" prefWidth="200"/>
        </columns>
    </TableView>

</VBox>
