<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/17" 
      xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.shopjoy.controller.ReviewsManagementController"
      spacing="20" 
      styleClass="content-view"
      stylesheets="@../../css/styles.css">
    
    <padding>
        <Insets top="30" right="30" bottom="30" left="30"/>
    </padding>

    <!-- Header -->
    <HBox alignment="CENTER_LEFT" spacing="15" style="-fx-padding: 10;">
        <Label text="Reviews Management" styleClass="page-title"/>
        <Region HBox.hgrow="ALWAYS"/>
        <ComboBox fx:id="ratingFilterCombo" promptText="Filter by Rating" prefWidth="150"/>
        <Button fx:id="applyFilterButton" text="Apply Filter" onAction="#handleFilter" styleClass="secondary-button"/>
        <Button fx:id="refreshButton" text="ðŸ”„ Refresh" onAction="#handleRefresh" styleClass="secondary-button"/>
    </HBox>

    <!-- Stats -->
    <HBox spacing="20" style="-fx-padding: 10;">
        <VBox styleClass="mini-stat-card">
            <Label text="Total Reviews" styleClass="mini-stat-label"/>
            <Label fx:id="totalReviewsLabel" text="0" styleClass="mini-stat-value"/>
        </VBox>
        <VBox styleClass="mini-stat-card">
            <Label text="Average Rating" styleClass="mini-stat-label"/>
            <Label fx:id="avgRatingLabel" text="0.0" styleClass="mini-stat-value"/>
        </VBox>
        <VBox styleClass="mini-stat-card">
            <Label text="Verified Reviews" styleClass="mini-stat-label"/>
            <Label fx:id="verifiedCountLabel" text="0" styleClass="mini-stat-value"/>
        </VBox>
    </HBox>

    <!-- Table -->
    <TableView fx:id="reviewsTable" prefHeight="500">
        <columns>
            <TableColumn fx:id="reviewIdCol" text="ID" prefWidth="60"/>
            <TableColumn fx:id="productCol" text="Product" prefWidth="200"/>
            <TableColumn fx:id="customerCol" text="Customer" prefWidth="150"/>
            <TableColumn fx:id="ratingCol" text="Rating" prefWidth="80"/>
            <TableColumn fx:id="titleCol" text="Title" prefWidth="200"/>
            <TableColumn fx:id="commentCol" text="Comment" prefWidth="300"/>
            <TableColumn fx:id="verifiedCol" text="Verified" prefWidth="80"/>
            <TableColumn fx:id="dateCol" text="Date" prefWidth="150"/>
            <TableColumn fx:id="actionsCol" text="Actions" prefWidth="120"/>
        </columns>
    </TableView>

</VBox>
