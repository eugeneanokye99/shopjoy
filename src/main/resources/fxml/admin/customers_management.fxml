<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/17" 
      xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.shopjoy.controller.CustomersManagementController"
      spacing="20" 
      styleClass="content-view"
      stylesheets="@../../css/styles.css">
    
    <padding>
        <Insets top="30" right="30" bottom="30" left="30"/>
    </padding>

    <!-- Header -->
    <HBox alignment="CENTER_LEFT" spacing="15" style="-fx-padding: 10;">
        <Label text="Customers Management" styleClass="page-title"/>
        <Region HBox.hgrow="ALWAYS"/>
        <TextField fx:id="searchField" promptText="Search customers..." prefWidth="300" />
        <Button fx:id="searchButton" text="ðŸ” Search" onAction="#handleSearch" styleClass="secondary-button"/>
        <Button fx:id="refreshButton" text="ðŸ”„ Refresh" onAction="#handleRefresh" styleClass="secondary-button"/>
    </HBox>

    <!-- Stats Section -->
    <HBox spacing="20" style="-fx-padding: 10;">
        <VBox styleClass="mini-stat-card">
            <Label text="Total Customers" styleClass="mini-stat-label"/>
            <Label fx:id="totalCustomersLabel" text="0" styleClass="mini-stat-value"/>
        </VBox>
        <VBox styleClass="mini-stat-card">
            <Label text="New This Month" styleClass="mini-stat-label"/>
            <Label fx:id="newCustomersLabel" text="0" styleClass="mini-stat-value"/>
        </VBox>
        <VBox styleClass="mini-stat-card">
            <Label text="Active Orders" styleClass="mini-stat-label"/>
            <Label fx:id="activeOrdersLabel" text="0" styleClass="mini-stat-value"/>
        </VBox>
    </HBox>

    <!-- Table Section -->
    <TableView fx:id="customersTable" prefHeight="500">
        <columns>
            <TableColumn fx:id="userIdCol" text="ID" prefWidth="60"/>
            <TableColumn fx:id="usernameCol" text="Username" prefWidth="150"/>
            <TableColumn fx:id="nameCol" text="Full Name" prefWidth="200"/>
            <TableColumn fx:id="emailCol" text="Email" prefWidth="220"/>
            <TableColumn fx:id="phoneCol" text="Phone" prefWidth="130"/>
            <TableColumn fx:id="ordersCountCol" text="Orders" prefWidth="80"/>
            <TableColumn fx:id="joinDateCol" text="Joined" prefWidth="150"/>
            <TableColumn fx:id="actionsCol" text="Actions" prefWidth="150"/>
        </columns>
    </TableView>

</VBox>
