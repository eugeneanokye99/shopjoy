<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.shopjoy.controller.OrdersController"
            stylesheets="@../css/styles.css">

    <!-- Top Section: Header and Filters -->
    <top>
        <HBox spacing="15" alignment="CENTER_LEFT" style="-fx-padding: 15; -fx-background-color: white; -fx-border-color: #e0e0e0; -fx-border-width: 0 0 1 0;">
            <Label text="Orders Management" styleClass="section-title"
                   style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #424242;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <ComboBox fx:id="orderStatusFilterCombo" promptText="Filter by Status" prefWidth="180"
                      style="-fx-pref-height: 35px; -fx-font-size: 14px;"/>
            <Button fx:id="filterOrdersButton" text="Filter" onAction="#handleFilterOrders"
                    style="-fx-background-color: #757575; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 8 20; -fx-cursor: hand;"/>
            <Button fx:id="refreshOrdersButton" text="Refresh" onAction="#handleRefreshOrders"
                    style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 8 20; -fx-cursor: hand;"/>
        </HBox>
    </top>

    <!-- Center Section: Orders Table -->
    <center>
        <TableView fx:id="ordersTable" style="-fx-background-color: white;">
            <columns>
                <TableColumn fx:id="orderIdColumn" text="Order ID" minWidth="80" prefWidth="80"
                             style="-fx-alignment: CENTER;"/>

                <TableColumn fx:id="orderUserColumn" text="Customer" minWidth="150" prefWidth="150"/>

                <TableColumn fx:id="orderDateColumn" text="Order Date" minWidth="150" prefWidth="150"/>

                <TableColumn fx:id="orderTotalColumn" text="Total Amount" minWidth="120" prefWidth="120"
                             style="-fx-alignment: CENTER_RIGHT;"/>

                <TableColumn fx:id="orderStatusColumn" text="Status" minWidth="120" prefWidth="120"
                             style="-fx-alignment: CENTER;"/>

                <TableColumn fx:id="orderPaymentStatusColumn" text="Payment" minWidth="100" prefWidth="100"
                             style="-fx-alignment: CENTER;"/>

                <TableColumn fx:id="orderActionsColumn" text="Actions" minWidth="200" prefWidth="200"
                             style="-fx-alignment: CENTER;"/>
            </columns>
            
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
    </center>

</BorderPane>
